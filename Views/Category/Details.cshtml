@model MVCProject_Nazmul.Models.Category

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <title>Details</title>
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/bootstrap-theme.css" rel="stylesheet" />
</head>
<body>
    @using (Ajax.BeginForm("Details", "Category", new AjaxOptions { HttpMethod = "GET", UpdateTargetId = "div-record", OnSuccess = "$('.close').click()" }))
    {
        <div>
            <hr />
            <dl class="dl-horizontal">
                <dt class="mb-5">
                    @Html.DisplayNameFor(model => model.CategoryName)
                </dt>

                <dd class="mb-5"> 
                    @Html.DisplayFor(model => model.CategoryName)
                </dd>
                
                <dt>
                    @Html.DisplayNameFor(model => model.CategoryDescription)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.CategoryDescription)
                </dd>

            </dl>
        </div>
    }
    <center>
        <p>
            @Html.ActionLink("Edit", "Edit", new { id = Model.CategoryId }, new { @class = "btn btn-warning editDialog" }) |
            @Html.ActionLink("Back to List", "Index")
        </p>
        <br />
    </center>

</body>
</html>